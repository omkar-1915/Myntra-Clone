pipeline {
    agent any
    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/yashighokar1412/Myntra-Clone.git'
            }
        }
    stage('docker build') {
            steps { 
               sh 'docker build -t myntra . '
               sh 'docker images'
               sh 'docker run -itd -p 3000:3000 --name myntra myntra:latest'
                }
            }}}
