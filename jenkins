pipeline {
    agent any
    stages {
        stage("SCM Checkout") {
            steps {
                git branch: "main", url: "https://github.com/yashighokar1412/Myntra-Clone.git"
            }
        }
        stage("Docker Build") {
            steps { 
                sh "docker build -t yashthedocker/myntra:01 ."
                sh "docker images"
            }
        }
        stage('Push to DockerHub') {
            steps {
                withDockerRegistry(credentialsId: 'docker', url: 'https://index.docker.io/v1/') {
                    sh "docker push yashthedocker/myntra:01"
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps { 
                   script {
                    sh ('aws eks update-kubeconfig --name mytra --region us-east-1')
                    sh "kubectl apply -f deployment.yml"
                    sh "kubectl apply -f service.yml" }
                }
            }
        }
    }
